<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/background"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cardpayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="Card Payment"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="295dp"
            android:layout_height="35dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:text="Name"
            android:textColor="#ffffff"
            android:textSize="18sp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/card_holder_name"
            android:layout_width="@dimen/dimension3"
            android:layout_height="46dp"
            android:layout_marginLeft="60dp"
            android:height="58dp"
            android:background="@drawable/edit_textbackground"
            android:ems="10"
            android:hint="Card holder Name"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textColor="#5c5f72"
            android:textSize="16dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:text="Card Number"
            android:textColor="#ffffff"
            android:textSize="18sp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/cardnumber"
            android:layout_width="313dp"
            android:layout_height="46dp"
            android:layout_marginLeft="60dp"
            android:height="58dp"
            android:background="@drawable/edit_textbackground"
            android:ems="10"
            android:hint="xxxx-xxxx-xxxx-xxxx"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textColor="#5c5f72"
            android:textSize="16dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="60dp"
            android:text="CVV Code"
            android:textColor="#ffffff"
            android:textSize="18sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="100dp"
            android:text="Expire Date"
            android:textColor="#ffffff"
            android:textSize="18sp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/add_cvv"
            android:layout_width="115dp"
            android:layout_height="48dp"
            android:height="58dp"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/edit_textbackground"
            android:ems="10"
            android:hint="CVV"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textColor="#5c5f72"
            android:textSize="16dp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/expireDate"
            android:layout_width="115dp"
            android:layout_height="48dp"
            android:height="58dp"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="67dp"
            android:background="@drawable/edit_textbackground"
            android:ems="10"
            android:hint="DD/MM"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textColor="#5c5f72"
            android:textSize="16dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/visa_pic"
            android:layout_width="68dp"
            android:layout_height="42dp"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="60dp"
            app:srcCompat="@drawable/visa2"
            tools:ignore="MissingConstraints" />

        <RadioButton
            android:id="@+id/visa_radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"


            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/mastercard_pic"
            android:layout_width="96dp"
            android:layout_height="80dp"
            android:layout_marginTop="480dp"
            android:layout_marginLeft="60dp"
            app:srcCompat="@drawable/debit"
            tools:ignore="MissingConstraints" />

        <RadioButton
            android:id="@+id/masterradioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/paybtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="600dp"
            android:background="@drawable/carpaymentbtn"
            android:text="pay" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>