<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_intro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:text="Confirmation"
            android:textColor="#ffff"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="335dp"
            android:layout_height="236dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/delivery" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="Thank you for your order!"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="Order Placed"
            android:textColor="#33FF42"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="325dp"
                android:layout_height="84dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="208dp"
                android:background="@drawable/box" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="298dp"
                android:layout_height="78dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="35dp"
                android:text="Your order will be delivered in 3 working days"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="325dp"
                    android:layout_height="84dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginBottom="100dp"
                    android:background="@drawable/box2" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="313dp"
                    android:layout_height="49dp"
                    android:textColor="#ffff"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="45dp"
                    android:text="If you you have an any kind of sickness, please be kind to wear a mask before colloect your order"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cashbtn"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="300dp"
                    android:text="Home" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>