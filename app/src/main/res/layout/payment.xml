<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backdrop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-3dp" />

    <TextView
        android:id="@+id/cardpayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Methods"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="43dp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btncardpayment"
        android:layout_width="@dimen/dimension6"
        android:layout_height="@dimen/dimension7"
        android:background="@drawable/carpaymentbtn"
        android:text="card payment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="207dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btncashpayment"
        android:layout_width="@dimen/dimension8"
        android:layout_height="@dimen/dimension9"
        android:background="@drawable/cashbtn"
        android:text="cash Payment"
        android:textColorHighlight="#ffffff"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="372dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="@dimen/dimension10"
        android:layout_height="@dimen/dimension11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/docnurse"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="577dp" />

    <ImageView
        android:id="@+id/picture01"
        android:layout_width="63dp"
        android:layout_height="69dp"
        app:srcCompat="@drawable/cash"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="117dp" />


</androidx.constraintlayout.widget.ConstraintLayout>